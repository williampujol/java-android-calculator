<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_expressao"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="44dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_historico_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/black"
        android:textSize="30dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_weight="0.0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_7"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:text="7"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_8"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:text="8"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_9"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:text="9"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_mais"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:text="+"
            android:backgroundTint="@color/orange"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="0.0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_4"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:text="4"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_5"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:text="5"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_6"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:text="6"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_menos"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:text="-"
            android:backgroundTint="@color/orange"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="0.0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_1"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:text="1"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:text="2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_3"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:text="3"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_dividir"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:text="/"
            android:backgroundTint="@color/orange"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="0.0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_ponto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/orange"
            android:text="."
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_resultado"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="="
            android:backgroundTint="@color/orange"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_multiplicar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="*"
            android:backgroundTint="@color/orange"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="0.0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_limpar"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/orange"
            android:text="C"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_historico"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/orange"
            android:text="H"
            android:textSize="30dp" />


    </LinearLayout>


</LinearLayout>

